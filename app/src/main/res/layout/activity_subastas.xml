<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubastasActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="16dp"
        android:text="SUBASTAS"
        app:layout_constraintBottom_toTopOf="@+id/entrarMisProductos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="Regresar"
        android:onClick="regresarHome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrarVisualizarProductos" />

    <Button
        android:id="@+id/entrarVisualizarProductos"
        android:layout_width="174dp"
        android:layout_height="0dp"
        android:layout_marginBottom="136dp"
        android:layout_marginLeft="95dp"
        android:layout_marginStart="95dp"
        android:text="VISUALIZAR PRODUCTOS"
        android:onClick="verMisProductos"
        app:layout_constraintBottom_toTopOf="@+id/btnRegresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrarMisProductos" />

    <Button
        android:id="@+id/entrarMisProductos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        android:onClick="entrarMisProductos"
        android:text="MIS PRODUCTOS"
        app:layout_constraintBottom_toTopOf="@+id/entrarVisualizarProductos"
        app:layout_constraintEnd_toEndOf="@+id/entrarVisualizarProductos"
        app:layout_constraintStart_toStartOf="@+id/entrarVisualizarProductos"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</android.support.constraint.ConstraintLayout>